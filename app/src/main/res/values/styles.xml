<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white_80</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white_40</item>
        <item name="colorOnPrimary">@color/white_80</item>
    </style>

    <!-- MainActivity界面的风格. -->
    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/vivid_green</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorOnPrimary">@color/grey</item>
        <item name="colorControlActivated">@color/grey</item>
        <item name="colorControlHighlight">@color/grey</item>
        <item name="android:navigationBarColor">@color/vivid_green</item>
    </style>

    <!-- 登陆界面的 CheckBox. -->
    <style name="CheckBox" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!--登陆界面的 EditScreenText-->
    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/dark_white</item>
        <item name="colorControlActivated">@color/dark_white</item>
        <item name="colorControlHighlight">@color/dark_white</item>
        <item name="colorAccent">@color/dark_white</item>
        <item name="android:textColorHint">@color/dark_white</item>
    </style>

    <!--登陆界面的 hint文本-->
    <style name="hintAppearence" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
    </style>

    <!--备忘录内容界面的 EditText-->
    <!--colorControlNormal 为没有获取焦点时候下划线的颜色-->
    <!--colorControlActivated 为获取焦点时候光标与下划线的颜色-->
    <style name="MemoEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/white_80</item>
        <item name="colorControlActivated">#24A2F0</item>
    </style>

    <!--设置点击 备忘录标题界面 右上角更多时，弹出的选项不覆盖锚点-->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
    </style>

    <!--MemoContentActivity中弹窗的按钮文本颜色-->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/negative</item>
    </style>

    <!--确定按钮样式-->
    <style name="positive">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--取消按钮样式-->
    <style name="negative">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dialog_date" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <item name="colorAccent">@color/vivid_green</item>
    </style>
</resources>
