<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/budget_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <RelativeLayout
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Remaining_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/Remaining_budget"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/Remaining_budget_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="20sp"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <View
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:background="@color/dark_gray"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/budget_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/month_budget"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/outcome_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/budget_tx"
                android:text="@string/month_outcome"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/budget_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_alignParentEnd="true"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/outcome_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/budget_value"
                android:textSize="18sp"/>

        </RelativeLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/PieChart"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

</LinearLayout>